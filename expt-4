#MCS EXPT 4 
import numpy as np 
print("The Polynomial is:") 
a = np.zeros((15, 4), dtype=int) 
for i in range(4): 
 a[i, :] = int(input()) 
for i in range(4, 15): 
 a[i, 0] = a[i-1, 2] ^ a[i-1, 3] 
 a[i, 1:] = a[i-1, :-1] 
print("The Stable Table is:") 
print(a) 
y = a[:, 3] 
print("PN Sequence is:") 
print(y) 
b = np.count_nonzero(a[:, 3] == 1) 
c = np.count_nonzero(a[:, 3] == 0)
print("The Number of Ones:") 
print(b) 
print("The Number of Zeroes:") 
print(c)
